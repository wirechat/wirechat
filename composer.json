{
    "name": "wirechat/wirechat",
    "description": "A Laravel Livewire messaging app for teams with private chats and group conversations.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Wirechat\\Wirechat\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]

    },
    "autoload-dev": {
        "psr-4": {
            "Wirechat\\Wirechat\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Wirechat\\Wirechat\\Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Wirechat\\Wirechat\\Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Namu Makwembo"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Wirechat\\Wirechat\\WirechatServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "livewire/livewire": "^3.2.3",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "laravel/prompts": "^0.1.0|^0.3.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^8.24|^9.0|^10.0",
        "pestphp/pest": "^2.34|^3.0.0",
        "pestphp/pest-plugin-laravel": "^2.4|^3.0.0",
        "christophrumpel/missing-livewire-assertions": "^2.8",
        "laravel/pint": "^1.18",
        "larastan/larastan": "^2.0|^3.0"
    },
    "scripts": {
    "post-autoload-dump": [
        "@clear",
        "@prepare"
    ],
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
        "Composer\\Config::disableProcessTimeout",
        "@build",
        "@php vendor/bin/testbench serve"
    ],
    "lint": [
        "@php vendor/bin/phpstan analyse"
    ],
    "test": [
        "@php vendor/bin/pest --parallel",
        "@php vendor/bin/pint",
        "@php vendor/bin/phpstan analyse"
    ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
